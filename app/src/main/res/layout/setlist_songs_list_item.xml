<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/list_item_divider">

    <TextView
        android:id="@+id/songs_list_item_drag_handle"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:drawableStart="@drawable/ic_drag_handle_black_24dp"
        android:drawableLeft="@drawable/ic_drag_handle_black_24dp"
        android:longClickable="false"/>

    <TextView
        android:id="@+id/songs_list_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/songs_list_item_artist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/options_icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableEnd="@drawable/ic_more_vert_black_24dp"
        android:drawableRight="@drawable/ic_more_vert_black_24dp"/>


</LinearLayout>
