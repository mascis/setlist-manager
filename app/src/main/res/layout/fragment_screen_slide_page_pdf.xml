<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <com.github.barteksc.pdfviewer.PDFView
        android:id="@+id/pdfView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/exit_container"/>

    <LinearLayout
        android:id="@+id/exit_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGrayOpaque">

        <TextView
            android:id="@+id/exit_icon"
            android:padding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableEnd="@drawable/ic_clear_white_24dp"
            android:drawableRight="@drawable/ic_clear_white_24dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="top"
            android:visibility="gone"
            android:layout_gravity="right" />

    </LinearLayout>

</RelativeLayout>







